
<div class="row">
    <div class="col-6">
        <label for="value">@Controller.ParameterName</label>
    </div>
    <div class="col-6">
        <input id="value" type="text" value="@Controller.ParameterValue" class="form-control"
               readonly="IsReadOnly" />
    </div>
</div>

@code {
    [Parameter] [Required] 
    public SetValueForParameterController Controller { get; set; }
    [Parameter] public bool IsReadOnly { get; set; }  // checks if the field is readonly
}
