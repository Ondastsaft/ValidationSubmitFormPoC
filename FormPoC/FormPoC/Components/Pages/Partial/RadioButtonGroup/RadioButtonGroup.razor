@foreach (var option in Controller.RadioOptions)
{
    <input type="radio"
           id="@option.Key"
           @key="option"
           name="radio_list"
           value="@option.Key"
           @onchange="OnValueChanged"
           checked="@(Controller.SelectedValue.Equals(option.Key))"
           aria-label="@option.Value" /> <!-- Using the dictionary string for aria-label -->

    <label for="@option.Key">@option.Value</label>
    <br />
}

@typeparam TEnum where TEnum : Enum
@code {
    [Parameter, Required]
    public RadioButtonGroupController<TEnum> Controller { get; set; }

    private void OnValueChanged(ChangeEventArgs e)
    {
        TEnum selectedValue = (TEnum)Enum.Parse(typeof(TEnum), e.Value.ToString());
        Controller.SelectedValue = selectedValue; 
    }
}