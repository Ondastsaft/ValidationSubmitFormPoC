
@foreach (CheckBoxModel checkBox in checkboxes)
{
    <CheckBoxComponent CheckBox="checkBox" @onchange="(e) => OnTermsAcceptedChanged((bool)e.Value, checkBox)" @rendermode="InteractiveServer" />
}

@code {
    private List<CheckBoxModel> checkboxes;

    protected override void OnInitialized()
    {
        checkboxes = CheckBoxServices.GetWeightDistanceCheckBoxes();
    }

    private void OnTermsAcceptedChanged(bool value, CheckBoxModel checkBox)
    {
        checkBox.IsChecked = value;
        // Additional logic here
        Console.WriteLine($"Checkbox {checkBox.Label} changed to {value}");
    }
}